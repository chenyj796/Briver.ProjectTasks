<?xml version="1.0" encoding="utf-8" ?>
<Briver.ProjectTasks>

    <AssemblyInformationTask
        Template="编译({time}) 分支({branch}) 提交({hash}) 仓库({address})">

        <Token Name="time" Command="powershell" Arguments="-NoProfile Get-Date -Format 'yyyy-MM-dd HH:mm:ss'"/>
        <Token Name="branch" Command="git" Arguments="symbolic-ref --short -q HEAD" />
        <Token Name="hash" Command="git" Arguments="rev-parse HEAD" />
        <Token Name="address" Command="git" Arguments="remote get-url --push origin" />
    </AssemblyInformationTask>

</Briver.ProjectTasks>